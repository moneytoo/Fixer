<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="screen">

    <PreferenceCategory
        android:title="Tweaks">

        <SwitchPreference
            android:key="pref_no_safe_volume_warning"
            android:title="No safe volume warning"
            android:summary="WRITE_SECURE_SETTINGS" />

        <SwitchPreference
            android:key="pref_keyboard_switching"
            android:title="Hacker's Keyboard only in Termux"
            android:summary="Accessibility and WRITE_SECURE_SETTINGS" />

        <SwitchPreference
            android:key="pref_side_screen_gestures"
            android:title="Side screen gestures"
            android:summary="Accessibility" />

        <SwitchPreference
            android:key="pref_app_backup"
            android:title="App backup" />

        <SwitchPreference
            android:key="pref_auto_select_client_certificate"
            android:title="Auto select client certificate"
            android:summary="Accessibility" />

        <SwitchPreference
            android:key="pref_long_press_volume"
            android:title="Long press volume for pause/next"
            android:summary="SET_VOLUME_KEY_LONG_PRESS_LISTENER" />

        <SwitchPreference
            android:key="pref_power_wakeup"
            android:title="No wake on power"
            android:summary="Accessibility" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Shortcuts">

        <Preference
            android:key="pref_radio"
            android:title="Radio (Device info)" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="Setup"
        android:key="pref_setup">

        <Preference
            android:title="Accessibility"
            android:key="pref_accessibility">
            <intent android:action="android.settings.ACCESSIBILITY_SETTINGS" />
        </Preference>

        <Preference
            android:key="pref_device_admin"
            android:title="Device admin">
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>
